<?xml version="1.0" encoding="UTF-8"?>
<persistence version="1.0" xmlns="http://java.sun.com/xml/ns/persistence">
    <persistence-unit name="defaultUnit">
    <provider>org.hibernate.ejb.HibernatePersistence</provider>
    <class>com.pss.core.model.Ativo</class>
    <class>com.pss.features.ativos.relacionamento.model.RelacionamentoAtivo</class>
    <class>com.pss.features.seguranca.model.Usuario</class>
        <properties>
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect" />
            <property name="hibernate.connection.url" value="jdbc:mysql://localhost:3306/inventario" />
            <property name="hibernate.connection.driver_class" value="com.mysql.jdbc.Driver" />
            <property name="hibernate.connection.password" value="" />
            <property name="hibernate.connection.username" value="root" />
            <property name="hibernate.hbm2ddl.auto" value="update" />
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="false"/>
        </properties>
	</persistence-unit>
</persistence>